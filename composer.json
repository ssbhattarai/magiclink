{
  "name": "ssbhattarai/magiclink",
  "description": "A passwordless login system for laravel",
  "keywords": [
    "php",
    "magiclink",
    "package",
    "passwordless"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Shyam Sundar Bhattarai",
      "email": "nascentsurya@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2.0"
  },
  "require-dev": {
    "laravel/pint": "^1.22.1",
    "orchestra/testbench": "^10.4",
    "peckphp/peck": "^0.1.3",
    "pestphp/pest": "^4.0.0",
    "pestphp/pest-plugin-laravel": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0.0",
    "phpstan/phpstan": "^2.1.16",
    "rector/rector": "^2.0.16",
    "symfony/var-dumper": "^7.2.6"
  },
  "autoload": {
    "psr-4": {
      "Ssbhattarai\\MagicLink\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ssbhattarai\\MagicLink\\Tests\\": "tests/",
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Ssbhattarai\\MagicLink\\MagicLinkServiceProvider"
      ]
    }
  },
  "scripts": {
    "lint": "pint",
    "refactor": "rector",
    "test:type-coverage": "pest --type-coverage --exactly=100",
    "test:typos": "peck",
    "test:lint": "pint --test",
    "test:unit": "pest --coverage --exactly=100",
    "test:types": "phpstan",
    "test:refactor": "rector --dry-run",
    "test": [
      "@test:lint",
      "@test:type-coverage",
      "@test:typos",
      "@test:unit",
      "@test:types",
      "@test:refactor"
    ]
  }
}